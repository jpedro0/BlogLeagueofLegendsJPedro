@model IEnumerable<BlogJoaoPedroLeagueofLegends.ViewModel.CategoriaViewModel>
@{
    ViewData["Title"] = "Listar";
}
<section class="maiginEndBoot">
    <h2 class="text-center h2">Listar Categorias</h2>

    <div class="row">
        <div class="col-md-3">
            <a href="/Categoria/Novo" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-plus"> Novo</span></a>
        </div>
        <div class="col-md-offset-7 col-md-1">
            <a href="/ADM/Menu" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-apple"> Menu</span></a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Descrição</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descricao</td>
                    <td>
                        <a href="/Categoria/Alterar/@item.CategoriaId" class="btn btn-warning btn-lg"><span class="glyphicon glyphicon-edit"></span></a>
                        <a href="/Categoria/Excluir/@item.CategoriaId" class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

